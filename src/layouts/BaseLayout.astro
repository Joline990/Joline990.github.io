---
import Header from "../components/Header.astro";
import "../styles/global.css";
const {pageTitle, homePage, pubDate} = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{!homePage ? `Fractals | ${pageTitle}`:`${pageTitle}`}</title>
    </head>
    <body>
        <Header pageTitle={pageTitle} homePage={homePage} pubDate={pubDate}/>
        <main>
            <slot/>
        </main>
    </body>
</html>
